---
import LabelComponent from "components/label/Label";
import RadioFieldComponent from "components/radio-group/RadioGroup";
import RadioOptionComponent from "components/radio-option/RadioOption";
import Documentation from "layouts/Documentation.astro";

const code = `
import InputField from "./InputField"

<RadioField id={SHARED_CUSTODY}>
    <Label hasTooltip>Har du delad vårdnad?</Label>
    <RadioOption value={true}>Ja</RadioOption>
    <RadioOption value={false}>Nej</RadioOption>
</RadioField>
`.trim();
---

<Documentation title="Input field" code={code}>
  <div slot="description">
    <p>How the user fill information.</p>
    <p>Use <code>InputField</code> for a complete usable item.</p>
  </div>
  <RadioFieldComponent slot="component">
    <LabelComponent>Har du delad vårdnad?</LabelComponent>
    <RadioOptionComponent>Ja</RadioOptionComponent>
    <RadioOptionComponent>Nej</RadioOptionComponent>
  </RadioFieldComponent>
</Documentation>
